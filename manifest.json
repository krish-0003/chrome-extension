{
    "manifest_version": 2,
    "name": "My Extension 4",
    "version": "0.1",
    "web_accessible_resources" : [
      "website_logo/*.jpg"
      ],
    "permissions": [
      "storage",
      "tabs",
      "downloads",
      "scripting",
      "activeTab"
  ],
    "content_scripts": [
        {
        "matches": [
          "*://*.amazon.in/*","*://*.amazon.com/*","*://*.flipkart.com/*","*://*.aliexpress.com/*","*://*.alibaba.com/*"
            ],
        "js": ["bundle.js"]
        
      }
    ],
    "browser_action": {
        "default_icon": "images.png",
        "default_title": "you can also add a tool tip here",
        "default_popup": "popup2.html"
      },
      "background": {
        "scripts": ["background.js"]
      }
    
  }